{
  "name": "Protect main",
  "target": "branch",
  "enforcement": "active",
  "conditions": {
    "ref_name": {
      "include": [
        "refs/heads/main"
      ],
      "exclude": []
    }
  },
  "bypass_actors": [],
  "rules": [
    {
      "type": "pull_request",
      "parameters": {
        "dismiss_stale_reviews_on_push": true,
        "require_code_owner_review": true,
        "require_last_push_approval": false,
        "required_approving_review_count": 1,
        "require_review_thread_resolution": true
      }
    },
    {
      "type": "required_status_checks",
      "parameters": {
        "strict_required_status_checks_policy": true,
        "do_not_fail_fast": false,
        "required_status_checks": [
          {
            "context": "<REPLACE_WITH_LINUX_CI_CHECK>",
            "integration_id": null
          },
          {
            "context": "<REPLACE_WITH_WINDOWS_CI_CHECK>",
            "integration_id": null
          }
        ]
      }
    },
    {
      "type": "non_fast_forward",
      "parameters": {}
    }
  ]
}
